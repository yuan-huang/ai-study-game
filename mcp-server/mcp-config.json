{
  "mcpServers": {
    "game-mcp-server": {
      "command": "node",
      "args": ["./dist/index.js"],
      "cwd": ".",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "DEBUG": "true"
      }
    }
  },
  "services": {
    "imageGeneration": {
      "provider": "gemini",
      "version": "2.0-flash",
      "defaultStyle": "pixel_art",
      "defaultSize": "512x512"
    },
    "dialogue": {
      "provider": "google-cloud-tts",
      "defaultLanguage": "zh-CN",
      "defaultVoice": "neutral",
      "supportedLanguages": ["zh-CN", "en-US", "ja-JP", "ko-KR"],
      "characterPresets": {
        "warrior": { "pitch": 2, "speed": 1.1 },
        "mage": { "pitch": -1, "speed": 0.9 },
        "merchant": { "pitch": 0, "speed": 1.0 },
        "princess": { "pitch": -2, "speed": 0.9 },
        "villain": { "pitch": 3, "speed": 1.2 },
        "narrator": { "pitch": 0, "speed": 1.0 }
      }
    },
    "music": {
      "provider": "lyria",
      "defaultGenre": "orchestral",
      "defaultTempo": "medium",
      "maxDuration": 300
    },
    "database": {
      "type": "mongodb",
      "host": "localhost",
      "port": 27017,
      "database": "swl"
    }
  }
} 